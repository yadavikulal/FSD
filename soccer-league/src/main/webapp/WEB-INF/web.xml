<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>ListLeagueServlet</servlet-name>
		<display-name>ListLeagueServlet</display-name>
		<description></description>
		<servlet-class>comm.example.view.ListLeagueServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddLeagueServlet</servlet-name>
		<display-name>AddLeagueServlet</display-name>
		<description></description>
		<servlet-class>comm.example.controller.AddLeagueServlet</servlet-class>
	</servlet>
	
	
	<servlet>
		<servlet-name>ErrorServlet</servlet-name>
		<display-name>ErrorServlet</display-name>
		<description></description>
		<servlet-class>comm.example.view.ErrorServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SuccessServlet</servlet-name>
		<display-name>SuccessServlet</display-name>
		<description></description>
		<servlet-class>comm.example.view.SuccessServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddLeagueViewServlet</servlet-name>
		<display-name>AddLeagueViewServlet</display-name>
		<description></description>
		<servlet-class>comm.example.view.AddLeagueServlet</servlet-class>
		<init-param>
		
		<param-name>season-list</param-name>
		<param-value>Unknown,Autumn,Winter,Summer,Spring</param-value>

		
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListLeagueServlet</servlet-name>
		<url-pattern>/list_leagues.view</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddLeagueServlet</servlet-name>
		<url-pattern>/add_league.do</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ErrorServlet</servlet-name>
		<url-pattern>/error.view</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SuccessServlet</servlet-name>
		<url-pattern>/success.view</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AddLeagueViewServlet</servlet-name>
		<url-pattern>/add_league.view</url-pattern>
	</servlet-mapping>
	<welcome-file-list>

		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
