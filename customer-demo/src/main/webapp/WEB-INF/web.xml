	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListCustomer1</servlet-name>
		<url-pattern>/ListCustomer1</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListCustomer1</servlet-name>
